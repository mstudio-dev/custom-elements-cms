{% extends 'base.html.twig' %}

{% block title %}{{ page.title }} - Custom Elements CMS{% endblock %}

{% block body %}
<div class="container my-5">
    <a href="{{ path('homepage') }}" class="btn btn-outline-primary mb-4">
        ← Zurück zur Startseite
    </a>
    
    <h1 class="mb-4">{{ page.title }}</h1>

    {% for element in elements %}
        <div class="element element-{{ element.type }} mb-5">
            {{ element.html|raw }}
        </div>
    {% endfor %}
    
    {% if elements is empty %}
        <div class="text-center py-5">
            <div class="alert alert-info">
                <p class="mb-3">Diese Seite hat noch keine Elemente.</p>
                <a href="/admin" class="btn btn-primary">Zum Backend →</a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
