{% extends 'base.html.twig' %}

{% block title %}Startseite - Custom Elements CMS{% endblock %}

{% block body %}
    <div class="container my-5">
        {% for element in elements %}
            <div class="element element-{{ element.type }} mb-5">
                {{ element.html|raw }}
            </div>
        {% endfor %}
        
        {% if elements is empty %}
            <div class="text-center py-5">
                <div class="bg-primary bg-gradient text-white rounded p-5">
                    <h1 class="fw-bold mb-4">Willkommen!</h1>
                    <p class="lead mb-4">Noch keine Elemente veröffentlicht.</p>
                    <a href="/admin" class="btn btn-light btn-lg">Zum Backend →</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
